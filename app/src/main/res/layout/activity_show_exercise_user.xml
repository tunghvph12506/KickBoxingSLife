<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.fragment.ShowExerciseUserActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/gray">

    <LinearLayout
        android:id="@+id/linearLayout_Practice"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:background="@drawable/border1"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/tv_BG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:paddingTop="40px"
            android:textStyle="bold"
            android:text="@string/home_tv_stomachchallenge"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:baselineAligned="false"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="30dp"
            android:padding="20dp"
            android:id="@+id/rv_exercise_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:text="Sẵn sàng"
        android:onClick="readyPractice"
        app:backgroundTint="@null"
        android:background="@drawable/btn_border2">

    </Button>


</LinearLayout>